pipeline {
    agent any
    environment{
        USERNAME = "example"
    }
    stages{
        stage("build - instalacion dependencias"){
            agent {
                docker {
                    label 'contenedores'
                    image 'node:22-alpine'
                    reuseNode true
                }
            }
            stages{
                stage("build - instalacion dependencias"){
                    steps{
                        sh 'npm install'
                    }
                }
                stage("build - ejecucion test"){
                    steps{
                        sh 'npm run test'
                    }
                }                
                stage("build - build del proyecto"){
                    steps{
                        sh 'npm run build'
                    }
                }
            }
        }
    }
}